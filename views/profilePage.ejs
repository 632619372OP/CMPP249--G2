<%- include('partials/mainHeader') %>
<link rel="stylesheet" href="vacationpackage.css">

<h2><%= FirstName %> <%= LastName %></h2><br>
<h3>Upcoming Travel Packages ()</h3>
<div class="padding1" align="center">
    <% for(var i=0; i < availablePackages.length; i++) { %>
        <div class="tile">
            <img src="bhutan.jpg" alt="hawaii">
            <p align="center" style="margin-bottom:-15px;"><%= availablePackages[i].PkgName %></p></br>
            <p style="font-size: 18px;"><%= availablePackages[i].PkgDesc %></br></br>Starts:<%= availablePackages[i].PkgStartDate.toString() %> Ends:<%= availablePackages[i].PkgEndDate.toString() %></br>
            $<%= availablePackages[i].PkgBasePrice %></br>
            5 nights + flight<button>Add to Cart</button></p>
        </div> 
    <% } %>
</div>
<%- include('partials/mainFooter') %>